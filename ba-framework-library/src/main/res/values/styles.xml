<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppTheme.FullscreenTheme" parent="AppTheme">
        <item name="android:windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.SplashTheme" parent="AppTheme.FullscreenTheme">
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="TransparentDialogStyle">
        <item name="android:bottomBright">@android:color/transparent</item>
        <item name="android:bottomDark">@android:color/transparent</item>
        <item name="android:bottomMedium">@android:color/transparent</item>
        <item name="android:centerBright">@android:color/transparent</item>
        <item name="android:centerDark">@android:color/transparent</item>
        <item name="android:centerMedium">@android:color/transparent</item>
        <item name="android:fullBright">@android:color/transparent</item>
        <item name="android:fullDark">@android:color/transparent</item>
        <item name="android:topBright">@android:color/transparent</item>
        <item name="android:topDark">@android:color/transparent</item>
    </style>

    <style name="MyProgressStyle" parent="@style/Widget.AppCompat.ProgressBar">
        <item name="android:background">@drawable/shape_main_color_round_box</item>
        <item name="android:padding">16dp</item>

    </style>

    <style name="LoadingProgressStyle" parent="android:Theme.Dialog">
        <item name="android:alertDialogStyle">@style/TransparentDialogStyle</item>
        <item name="android:progressBarStyle">@style/MyProgressStyle</item>
        <item name="colorControlNormal">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:textColorPrimary">#FFFFFF</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.5</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">12sp</item>
    </style>


    <style name="EmptyListText"
        />

    <style name="WhiteTextButton.Borderless" parent="Base.Widget.AppCompat.Button.Borderless" >
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="MainButton" parent="Widget.AppCompat.Button.Borderless.Colored">
        <item name="android:background">@drawable/selector_main_button</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:textColor">@drawable/selector_main_button_text</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>

    </style>


    <style name="CustomDialog" parent="Theme.AppCompat.Dialog">
        <!--<item name="android:windowTitleStyle">@style/CustomDialog.Title</item>-->
        <!--<item name="android:windowTitleBackgroundStyle">@style/CustomDialog.Title.Background</item>-->
        <item name="android:windowBackground">@drawable/shape_main_color_stroke_white_round_box</item>
        <item name="android:buttonBarPositiveButtonStyle">@style/MainButton</item>
        <item name="android:bottomBright">@android:color/white</item>
        <item name="android:bottomDark">@android:color/white</item>
        <item name="android:bottomMedium">@android:color/white</item>
        <item name="android:centerBright">@android:color/white</item>
        <item name="android:centerDark">@android:color/white</item>
        <item name="android:centerMedium">@android:color/white</item>
        <item name="android:fullBright">@color/colorPrimary</item>
        <item name="android:fullDark">@color/colorPrimary</item>
        <item name="android:topDark">@color/colorPrimary</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:textColorPrimary">@android:color/black</item>

    </style>

    <style name="CustomDialog.Bottom" parent="CustomDialog" >
        <item name="android:windowBackground">@drawable/shape_main_color_stroke_white_round_box</item>
        <item name="android:buttonBarPositiveButtonStyle">@style/MainButton</item>
        <item name="android:bottomBright">@android:color/white</item>
        <item name="android:bottomDark">@android:color/white</item>
        <item name="android:bottomMedium">@android:color/white</item>
        <item name="android:centerBright">@android:color/white</item>
        <item name="android:centerDark">@android:color/white</item>
        <item name="android:centerMedium">@android:color/white</item>
        <item name="android:fullBright">@color/colorPrimary</item>
        <item name="android:fullDark">@color/colorPrimary</item>
        <item name="android:topDark">@color/colorPrimary</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:textColorPrimary">@android:color/black</item>
    </style>

    <style name="CustomDialog.FullScreen" parent="android:Theme.Black.NoTitleBar.Fullscreen" >
        <item name="android:windowBackground">@drawable/shape_main_color_stroke_white_round_box</item>
        <item name="android:buttonBarPositiveButtonStyle">@style/MainButton</item>
        <item name="android:bottomBright">@android:color/white</item>
        <item name="android:bottomDark">@android:color/white</item>
        <item name="android:bottomMedium">@android:color/white</item>
        <item name="android:centerBright">@android:color/white</item>
        <item name="android:centerDark">@android:color/white</item>
        <item name="android:centerMedium">@android:color/white</item>
        <item name="android:fullBright">@color/colorPrimary</item>
        <item name="android:fullDark">@color/colorPrimary</item>
        <item name="android:topDark">@color/colorPrimary</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:textColorPrimary">@android:color/black</item>
    </style>

    <style name="CustomDialog.Bottom.FullWidth" parent="CustomDialog" >
        <item name="android:windowBackground">@drawable/shape_main_color_stroke_white_round_box</item>
        <item name="android:buttonBarPositiveButtonStyle">@style/MainButton</item>
        <item name="android:bottomBright">@android:color/white</item>
        <item name="android:bottomDark">@android:color/white</item>
        <item name="android:bottomMedium">@android:color/white</item>
        <item name="android:centerBright">@android:color/white</item>
        <item name="android:centerDark">@android:color/white</item>
        <item name="android:centerMedium">@android:color/white</item>
        <item name="android:fullBright">@color/colorPrimary</item>
        <item name="android:fullDark">@color/colorPrimary</item>
        <item name="android:topDark">@color/colorPrimary</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:textColorPrimary">@android:color/black</item>
    </style>

    <style name="CustomDialog.Title" parent="android:Widget.TextView">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="CustomDialog.Title.Background" parent="Base.DialogWindowTitleBackground.AppCompat">
        <item name="android:background">@color/colorAccent</item>
    </style>

    <style name="CustomDialog.Text" parent="@android:style/TextAppearance.Holo.Medium">
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="MainColorText">
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="MainColorText.Small" parent="MainColorText">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="MainColorText.LowMiddle" parent="MainColorText">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="MainColorText.Middle" parent="MainColorText">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="MainColorText.Large" parent="MainColorText">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="MainDarkColorText">
        <item name="android:textColor">@color/colorPrimaryDark</item>
    </style>

    <style name="MainDarkColorText.Small" parent="MainDarkColorText">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="MainDarkColorText.Middle" parent="MainDarkColorText">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="MainDarkColorText.Large" parent="MainDarkColorText">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="MainLightColorText">
        <item name="android:textColor">@color/colorPrimaryLight</item>
    </style>

    <style name="MainLightColorText.Middle" parent="MainLightColorText">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="MainLightColorText.Small" parent="MainLightColorText">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="MainEditText" parent="MainColorText.Middle">

    </style>

    <style name="EmptyText" parent="MainColorText.Middle">
        <item name="android:textColor">@color/gray_text_color</item>
    </style>

    <style name="TextInputLabelText" parent="MainColorText">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="UnderlineIfEnabled">
        <item name="android:background">@drawable/selector_underline_if_enabled</item>
    </style>

    <style name="UnderlineIfEnabled.EditText" parent="UnderlineIfEnabled">
        <item name="android:textColor">@drawable/selector_main_edittext_color</item>
        <item name="android:paddingTop">2dp</item>
        <item name="android:paddingBottom">2dp</item>
    </style>

    <style name="MainEditText.LabelInputView" parent="MainEditText">
        <item name="android:textColorHint">@color/gray_text_color</item>
        <!--<item name="android:background">@android:color/transparent</item>-->
    </style>

    <style name="MainButton.NoBackground" parent="MainButton">
        <item name="android:background">@null</item>
        <item name="android:foreground">@null</item>
        <item name="android:textColor">@drawable/selector_main_button_no_bg_text</item>
        <item name="android:padding">2dp</item>
    </style>

</resources>
